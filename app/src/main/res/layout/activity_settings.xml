<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_settings_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "FTP settings"
        android:textAlignment="center"
        android:textSize="20sp"/>


    <EditText
        android:id="@+id/ip_id"
        android:layout_width="332dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        tools:text="IP Address" />

    <EditText
        android:id="@+id/username_id"
        android:layout_width="332dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:textAlignment="center"
        tools:text="Username" />

    <EditText
        android:id="@+id/password_id"
        android:layout_width="332dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        tools:text="Password" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text = "MQTT settings"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/server_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="server ip" />

    <EditText
        android:id="@+id/user_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="user" />

    <EditText
        android:id="@+id/pass_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="password" />

    <EditText
        android:id="@+id/port_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="port" />


    <Button
        android:id="@+id/send_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="129dp"
        android:onClick="sendToMain"
        android:text="send" />

</android.support.v7.widget.LinearLayoutCompat>